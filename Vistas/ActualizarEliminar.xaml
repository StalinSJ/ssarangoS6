<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ssarangoS6.Vistas.ActualizarEliminar"
             Title="ActualizarEliminar">
    <VerticalStackLayout>
        <Label 
            Text="Actualizar / Eliminar"
            HorizontalOptions="Center"
            FontSize="20"/>
        
        <Entry x:Name ="txtCodigo" 
              IsReadOnly="True"/>

        <Entry x:Name="txtNombre"
               Placeholder="Ingrese el nombre"/>
        <Entry x:Name="txtApellido"
               Placeholder="Ingrese el apellido"/>
        <Entry x:Name="txtEdad"
               Placeholder="Ingrese el Edad"/>
        <Button x:Name="btnActualizar" Text="ACTUALIZAR"
                Clicked="btnActualizar_Clicked"/>
        <Button x:Name="btnEliminar" Text="ElIMINAR"
                Clicked="btnEliminar_Clicked"/>


    </VerticalStackLayout>
</ContentPage>